@model List<TodoApp.Models.Todo>

<h2 class="text-center mb-4">📝 Todo List</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="AddTask" asp-controller="Todo" class="btn btn-primary">➕ Add New Task</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Todo ID</th>
            <th>Task Name</th>
            <th>Task Description</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TodoId</td>
                <td>@item.TaskName</td>
                <td>@item.TaskDescription</td>
                <td>@(item.IsCompleted ? "✅ Completed" : "⏳ Pending")</td>
                <td>@item.CreatedAt?.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    <a asp-action="UpdateTask" asp-controller="Todo" asp-route-id="@item.TodoId" class="btn btn-primary "> Edit</a>
                    <!-- Optional Delete Button -->
                    <a asp-action="DeleteTask" asp-controller="Todo" asp-route-id="@item.TodoId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this task?');"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
